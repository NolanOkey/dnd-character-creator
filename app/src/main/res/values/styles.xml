<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="character_title" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stat_title</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">delius_swash_caps</item>
    </style>

    <style name="character_total" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stat_title</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">delius_swash_caps</item>
    </style>

    <style name="character_skill_title" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stat_title</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">delius_swash_caps</item>
    </style>

    <style name="character_skill_modifier" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/stat_title</item>
        <item name="fontWeight">800</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">delius_swash_caps</item>
    </style>

</resources>
